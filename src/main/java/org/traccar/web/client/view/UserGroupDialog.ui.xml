<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="verticalLayoutData">
    <ui:attributes width="1" height="-1" />
  </ui:with>
    
  <gxt:Window ui:field="window" pixelSize="950, 480" modal="true" headingText="{i18n.userGroups}">
    <gxt:ContentPanel headerVisible="false">
      <container:VerticalLayoutContainer>
          
        <container:child layoutData="{verticalLayoutData}">
          <form:FieldLabel text="{i18n.name}" labelWidth="180">
            <form:widget>
              <form:TextField ui:field="name" allowBlank="false" />
            </form:widget>
          </form:FieldLabel>
        </container:child>
        
        <container:child layoutData="{verticalLayoutDataWithButtons}">
          <form:FieldLabel ui:field="srcGroupLbl" text="{i18n.copyPermissionsFrom}" labelWidth="180">
            <form:widget>
              <form:ComboBox ui:field="srcUserGroup" />
            </form:widget>
          </form:FieldLabel>
        </container:child>
          
      </container:VerticalLayoutContainer>
    </gxt:ContentPanel>
    
    <gxt:button>
      <button:TextButton ui:field="saveButton" text="{i18n.save}" />
    </gxt:button>
    <gxt:button>
      <button:TextButton ui:field="cancelButton" text="{i18n.cancel}" />
    </gxt:button>
    
  </gxt:Window>
</ui:UiBinder>