<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
  	xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
  	xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
  	xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
        xmlns:grid="urn:import:com.sencha.gxt.widget.core.client.grid">

  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" 
           field="verticalLayoutData">
    <ui:attributes width="1" height="-1" />
  </ui:with>

  <ui:with type="com.sencha.gxt.core.client.util.Margins" field="buttonDataMargins">
    <ui:attributes top="4" right="0" bottom="4" left="0" />
  </ui:with>

  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" 
           field="verticalLayoutDataWithButtons">
      <ui:attributes width="1" height="-1" margins="{buttonDataMargins}"/>
  </ui:with>
  
  <ui:with type="com.sencha.gxt.core.client.util.Margins" field="gridMargins">
    <ui:attributes top="4" right="0" bottom="8" left="0" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
           field="gridLayoutData">
      <ui:attributes width="1" height="1" margins="{gridMargins}"/>
  </ui:with>
  
  <ui:with type="com.sencha.gxt.core.client.util.Margins" field="halfWindowMargins">
      <ui:attributes top="0" right="4" bottom="0" left="4" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData"
           field="halfWindow">
      <ui:attributes width="0.5" height="1" margins="{halfWindowMargins}" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.core.client.util.Margins" field="ltMargin">
      <ui:attributes left="4" top="4" right="0" bottom="0" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.core.client.util.Margins" field="lrtMargin">
      <ui:attributes left="6" top="4" right="4" bottom="0" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData"
           field="hWrapContent">
      <ui:attributes width="-1" height="-1" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData"
           field="hltWrapContent">
      <ui:attributes width="-1" height="-1" margins="{ltMargin}" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData"
           field="hltrWrapContent">
      <ui:attributes width="-1" height="1" margins="{lrtMargin}" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" 
           field="v24px">
      <ui:attributes width="1" height="24" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.core.client.util.Margins" field="m1">
      <ui:attributes left="20" top="0" right="0" bottom="0" />
  </ui:with>
  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData"
           field="h105px">
      <ui:attributes width="125" height="1" margins="{m1}" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.core.client.util.Margins" field="ml6px">
      <ui:attributes left="6" top="0" right="0" bottom="0"/>
  </ui:with>
  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData"
           field="hlWrapContent">
      <ui:attributes width="-1" height="1" margins="{ml6px}"/>
  </ui:with>
  
  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData"
           field="h144px">
      <ui:attributes width="150" height="1" margins="{ml6px}" />
  </ui:with>
  
  <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData"
           field="h510px">
      <ui:attributes width="510" height="1" />
  </ui:with>
      

  <ui:style>
    .tabBody {
        padding: 5px;
    }
  </ui:style>

  <ui:with field='i18n' type='org.traccar.web.client.i18n.Messages' />
  <ui:with type="com.sencha.gxt.widget.core.client.form.NumberPropertyEditor" field="integerPropertyEditor" />

  <gxt:Window ui:field="window" pixelSize="1150, 640" modal="true" 
              headingText="{i18n.trackCreation}" focusWidget="{saveButton}">
      <container:VerticalLayoutContainer addStyleNames="{style.tabBody}">
        
        <container:child layoutData="{v24px}">
            <container:HorizontalLayoutContainer>
                <container:child layoutData="{h510px}">
                    <form:FieldLabel text="{i18n.trackName}" 
                                     ui:field="trackNameLabel">
                        <form:widget>
                            <form:TextField ui:field="name" allowBlank="false" />
                        </form:widget>
                    </form:FieldLabel>
                </container:child>
                             
                <container:child layoutData="{h105px}">
                    <form:FieldLabel ui:text="{i18n.tolerance}" labelWidth="70">
                      <form:widget>
                        <form:NumberField ui:field="tolerance"
                                          editor="{integerPropertyEditor}"/>
                      </form:widget>
                    </form:FieldLabel>
                </container:child>
                <container:child layoutData="{hltWrapContent}">
                    <g:Label text="{i18n.minute}" />
                </container:child>
                
                <container:child layoutData="{h144px}">
                    <form:FieldLabel ui:text="{i18n.archiveAfter}" labelWidth="90">
                      <form:widget>
                        <form:NumberField ui:field="archiveAfter" 
                                          editor="{integerPropertyEditor}"/>
                      </form:widget>
                    </form:FieldLabel>
                </container:child>
                <container:child layoutData="{hltWrapContent}">
                    <g:Label text="{i18n.days}" />
                </container:child>
                
                <container:child layoutData="{hltrWrapContent}">
                    <form:CheckBox ui:field="createCorridor" boxLabel="{i18n.createCorridor}" />
                </container:child>
                <container:child layoutData="{hWrapContent}">
                    <form:NumberField ui:field="corridorWidth" enabled="false"
                                      editor="{integerPropertyEditor}"/>
                </container:child>
                <container:child layoutData="{hltWrapContent}">
                    <g:Label text="{i18n.km}" />
                </container:child>
            </container:HorizontalLayoutContainer>
        </container:child>
        
        <container:child layoutData="{v24px}">
            <container:HorizontalLayoutContainer>
                <container:child layoutData="{h510px}">
                    <form:FieldLabel ui:field="selectDeviceLabel" ui:text="{i18n.selectDevice}">
                        <form:widget>
                            <form:ComboBox ui:field="selectDevice" />
                        </form:widget>
                    </form:FieldLabel>
                </container:child>
                
                <container:child layoutData="{hlWrapContent}">
                    <button:TextButton ui:field="addButton" ui:text="{i18n.addToRoute}" />
                </container:child>
                
                <container:child layoutData="{hlWrapContent}">
                  <g:HTMLPanel>
                    <a href="http://trackman.pl/#supports">
                      <g:Label text="?" />
                    </a>
                  </g:HTMLPanel>
                </container:child>
            </container:HorizontalLayoutContainer>
        </container:child>
        
        <container:child layoutData="{gridLayoutData}">
          <container:HorizontalLayoutContainer>
            
            <container:child layoutData="{halfWindow}">
              <grid:Grid ui:field="grid" />
            </container:child>
          
            <container:child layoutData="{halfWindow}">
              <container:SimpleContainer ui:field="theMap" />
            </container:child>
          
          </container:HorizontalLayoutContainer>
        </container:child>
        
      </container:VerticalLayoutContainer>
      
    <gxt:button>
      <button:TextButton ui:field="saveButton" text="{i18n.save}" />
    </gxt:button>
    <gxt:button>
      <button:TextButton ui:field="cancelButton" text="{i18n.cancel}" />
    </gxt:button>
  </gxt:Window>

</ui:UiBinder>
